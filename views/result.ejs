<%- extend('base') %>
    <section class="title">
        <h2>
            <%= type %>
        </h2>
    </section>
    <section class="main-section">
        <div class="status">
            <img src="/images/<%= type %>.svg" class="status-image" alt="">

            <% if (type==='success' ) { %>
                <img src="/images/thank-you.svg" class="status-image" alt="">
                <% } %>
                    <p class="status-message">
                        <% if (type==='success' ) { %>
                            Your order has been successfully placed.
                            <% } %>
                                <% if (type==='pending' ) { %>
                                    Your order has been received! Payment completion pending.
                                    <% } %>
                                        <% if (type==='failed' ) { %>
                                            The payment was refused. Please try a different payment method or card.
                                            <% } %>
                                                <% if (type==='error' ) { %>
                                                    Error! Please review response in console and refer to <a
                                                        href="https://docs.adyen.com/development-resources/response-handling">Response
                                                        handling.</a>
                                                    <% }%>
                    </p>
        </div>
    </section>
    <section class="side-section"></section>